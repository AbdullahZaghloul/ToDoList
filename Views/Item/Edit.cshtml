@model Item
<h1>Edit Item</h1>
<h3>List Item</h3>
<hr>
<form method="post" action="/Item/Edit">
    <div class="mb-3">
        <input type="hidden" class="form-control" id="Id" name="Id" value="@Model.Id">
    </div>
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name">
    </div>
    <div class="mb-3">
        <label for="Desciption" class="form-label">Desciption</label>
        <input type="text" class="form-control" id="Desciption" name="Decription" value="@Model.Decription">
    </div>
    <div class="mb-3">
        <label for="DeadLine" class="form-label">DeadLine</label>
        <input type="datetime-local" class="form-control" id="DeadLine" name="Deadline"value="@Model.Deadline.ToString("yyyy-MM-ddTHH:mm")">
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>